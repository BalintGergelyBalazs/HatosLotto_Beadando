<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.hatoslotto.ForexCloseTradeController"
      spacing="10" alignment="CENTER">
    <Label text="Pozíció Zárása" style="-fx-font-size: 16px;"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Pozíció ID:"/>
        <TextField fx:id="tradeIdTextField" promptText="Pl. 12345"/>
    </HBox>
    <Button text="Pozíció Zárása" onAction="#onCloseTradeClick"/>
    <Label fx:id="resultLabel" text="Eredmény: -" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
</VBox>
