<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.hatoslotto.ParhuzamosController"
      spacing="20" alignment="CENTER">
    <Label text="Párhuzamos programvégrehajtás bemutatása" style="-fx-font-size: 16px;"/>
    <Label fx:id="label1" text="Label 1 - 1 másodpercenként frissül" style="-fx-font-size: 14px;"/>
    <Label fx:id="label2" text="Label 2 - 2 másodpercenként frissül" style="-fx-font-size: 14px;"/>
    <Button text="Indítás" onAction="#onStartButtonClick" />
    <Button text="Leállítás" onAction="#onStopButtonClick" />
</VBox>
