<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.hatoslotto.ForexPricingController"
      spacing="10" alignment="CENTER">
    <Label text="Forex Aktuális Árfolyamok" style="-fx-font-size: 16px;"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Válassz devizapárt:"/>
        <ComboBox fx:id="currencyPairComboBox" prefWidth="150"/>
    </HBox>
    <Button text="Ár megjelenítése" onAction="#onShowPriceClick"/>
    <Label fx:id="priceLabel" text="Ár: -" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
</VBox>
